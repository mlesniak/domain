<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">

    <display-name>homepage</display-name>

    <filter>
        <filter-name>markdown</filter-name>
        <filter-class>com.mlesniak.MarkdownFilter</filter-class>
        <!--Location of .md - files and other content-->
        <init-param>
            <param-name>root</param-name>
            <!--<param-value>/Users/mlesniak/Documents/homepage/mlesniak.com/</param-value>-->
            <param-value>/home/ubuntu/www/</param-value>
        </init-param>
    </filter>

    <filter>
        <filter-name>wicket.homepage</filter-name>
        <filter-class>org.apache.wicket.protocol.http.WicketFilter</filter-class>
        <init-param>
            <param-name>applicationClassName</param-name>
            <param-value>com.mlesniak.MainApplication</param-value>
        </init-param>
        <init-param>
            <param-name>wicket.configuration</param-name>
            <!--<param-value>deployment</param-value>-->
            <param-value>development</param-value>
        </init-param>
    </filter>

    <listener>
        <listener-class>com.mlesniak.BackgroundThreadManager</listener-class>
    </listener>

    <filter-mapping>
        <filter-name>markdown</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>wicket.homepage</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>


</web-app>
